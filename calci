#include<iostream>
#include<cmath>
using namespace std;
int main()
{
 string operation;
 double number1,number2;
 
 cout<<"Enter first number:";
 cin >> number1;
 cout<<"Enter second number:";
 cin >> number2;
 cout<<"Enter the operation(+,-,*,/): ";
 cin >> operation ;
 if (operation == "+") 
 {
  cout << number1 + number2 ;
 }
 else if (operation == "-")
 {
  cout << number1 - number2 ;
  }
  else if ( operation == "*")
  {
   cout << number1 * number2 ;
   }
   else if (operation == "/")
   {
    cout << number1 / number2 ;
   }
   else {
        cout << " Not a recognized operation!";
        }
        
        return 0;
    } 
